# ========================================
# AI Threat Detection - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# SIEM Integration URLs
ELASTICSEARCH_URL=http://localhost:9200
KAFKA_URL=localhost:9092
REDIS_URL=redis://localhost:6379

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=threat_detection
DB_USER=postgres
DB_PASSWORD=your_password_here

# API Keys (Get free keys from these sources)
# VirusTotal: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Shodan: https://account.shodan.io/register
SHODAN_API_KEY=your_shodan_api_key

# AbuseIPDB: https://www.abuseipdb.com/register
ABUSEIPDB_API_KEY=your_abuseipdb_api_key

# OTX AlienVault: https://otx.alienvault.com/
OTX_API_KEY=your_otx_alienvault_api_key

# MalwareBazaar: https://auth.abuse.ch/
MALWAREBAZAAR_API_KEY=your_malwarebazaar_auth_key

# Alert Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Security Settings
SECRET_KEY=generate_a_random_secret_key
JWT_SECRET=generate_a_random_jwt_secret

# Model Configuration
MODEL_UPDATE_INTERVAL=3600
BATCH_SIZE=1000
DETECTION_THRESHOLD=0.7
